{
  "name": "mei-analyser",
  "private": true,
  "version": "0.1.6-dev",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": " vite preview",
    "preview-production": "vite preview --base=/mei-analyser/",
    "docs": "jsdoc --destination ./docs --readme README.md -r src",
    "database": "mkdir ./dist/database && cp ./GABCtoMEI/MEI_outfiles/*.mei ./dist/database",
    "updateDatabase": "node src/search/updateDatabase.cjs",
    "docs-production": "jsdoc --destination ./dist/docs --readme README.md -r src",
    "build-production": "vite build --base=/mei-analyser/ && npm run docs-production"
  },
  "devDependencies": {
    "jsdoc": "^4.0.2",
    "vite": "^5.0.8"
  }
}
